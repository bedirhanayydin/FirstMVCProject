
@{
    ViewBag.Title = "Getir";
    Layout = "~/Views/Shared/_SiteLayoutPage.cshtml";
}
@using MVC.Models
@model List<MVC.Models.Urunler>


<div class="w3-content w3-padding" style="max-width:1564px">
    <!-- Project Section -->
    <div class="w3-container w3-padding-32" id="projects">
        <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16" style="font-size:35px">Ürünler</h3>
    </div>

    <div class="w3-row-padding">
        
        @foreach (var i in Model)
        {
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">@i.UrunAdi</div>
                    @{
                        var d = "~/urunresim/" + i.UrunID + ".jpg";
                        <img src="@Url.Content(d)" width="200" height="200">
                    }
                    <h3>@i.Tedarikciler.SirketAdi</h3>
                    <p>Fiyat =@i.Fiyat</p>
                    <p>Stokta Mevcut</p>

                </div>
            </div>
                        }  
        
    </div>

</div>

 

