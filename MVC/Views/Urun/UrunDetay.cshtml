
@{
    ViewBag.Title = "Ürün Detay Sayfası";
}

@using MVC.Models
@model Urunler

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Detay Sayfası
                </div>
                <div class="block-controls">
                    <!--***KAPATMA DÜĞMESİ   <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>-->
                    <!--***AŞAĞIDAKİ <A> DA EKLEME BUTONU EKLEDIM Uİ-BUTTONS DAN BUTON SEÇTİM CLASINI ALDIM-->
                    <a href="/Urun/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Tedarikçi</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Durum</th>
                                <th>Resim</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                                <tr>
                                    <td>@Model.UrunAdi</td>
                                    @if (Model.Tedarikciler == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-primary">@Model.Tedarikciler.SirketAdi</span></td>
                                    }
                                    @if (Model.Kategoriler == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-info">@Model.Kategoriler.KategoriAdi</span></td>
                                    }

                                    <td>@Model.Fiyat</td>
                                    <td>@Model.Stok</td>
                                    @if (Model.Sonlandi == true)
                                    {
                                        <td><span class="label label-danger">Stokta Yok</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-success">Stokta Var</span></td>

                                    }
                                    <td>
                                        @{
                                            var x = "~/urunresim/" + Model.UrunID + ".jpg";
                                            <img src="@Url.Content(x)" width="100" height="100" />
                                        }
                                    </td>
                                    <!--***SİL BUTONU EKLEDİM-->
                                    <!--urun controllerındakı sil actionına gidiyor urun Id yide sildeki parametreye gönderdim -->
                                    <td><a href="/Urun/Sil/@Model.UrunID" class="btn btn-danger rounded">Sil</a></td>
                                </tr>
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

