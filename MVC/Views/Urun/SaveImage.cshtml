
@{
    ViewBag.Title = "SaveImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Resim Ekle</h2>
@using (Html.BeginForm("SaveImage", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("HiddenId", Url.RequestContext.RouteData.Values["id"])
    <p>
        @Html.TextBox("UploadedImage", "", new { type = "File" })
    </p>
    <p>
        <input type="submit" value="Yükle" />
    </p>
}

@{
    if (ViewBag.Message != null)
    {
        var a = "~/urunresim/" + Url.RequestContext.RouteData.Values["id"] + ".jpg";
        @ViewBag.Message
        <p>
            <img src="@Url.Content(a)" width="100" height="100" />
        </p>
    }
}

<hr />
<p>@Html.ActionLink("Ürün Listesine Dön", "Index")</p>