
@{
    ViewBag.Title = "Ürün Ekleme Sayfası";
}
@using MVC.Models
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
</a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Urun/UrunEkle" method="post" role="form"><!--ACTİON EKLEDIM URUN CONTOLOREDAKI URUNEKLEYE GÖNDERSIN-->
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ürün Adı Giriniz" name="UrunAdi">
                            <!--Place Holder Özelliği Hiçbişey Yazmayınca Arkada Gözüken Textdir-->
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tedarikçi:</label>
                            <select class="form-control" name="TedarikciID">
                                @foreach (Tedarikciler ted in ViewBag.Tedarikciler)
                                {
                                    <option value="@ted.TedarikciID">@ted.SirketAdi</option>
                                }
                            </select>
                        </div>  
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori:</label>
                                <!--2tane Select oluşturdum claslarını  from-control yaptım-->    
                            <select class="form-control" name="KategoriID">
                                @foreach (Kategoriler ktg in ViewBag.Kategoriler)
                                {
                                    <option value="@ktg.KategoriID">@ktg.KategoriAdi</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat:</label>
                            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Fiyat Giriniz" name="Fiyat">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Stok:</label>
                            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Stok Giriniz" name="Stok"><!--Place Holder Özelliği Hiçbişey Yazmayınca Arkada Gözüken Textdir-->
                        </div>    
                        
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

