
@{
    ViewBag.Title = "Guncelle_BilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MVC.Models
@model MVC.Models.Urunler
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Güncelleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
                    {
                        <label>Ürün Adı</label>
                            @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control" })
                            <br />
                            <label>Tedarikçi Adı</label>
                            @Html.TextBoxFor(x => x.Tedarikciler.MusteriAdi, new { @class = "form-control" })
                            <br />
                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
                            <br />
                            <label>Stok</label>
                            @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
                           
                            <br />
                            <button type="submit" class="btn btn-primary">Kaydet</button>

                    }

                </div>
            </div>
        </div>
    </div>
</div>

